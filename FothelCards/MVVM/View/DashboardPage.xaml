<Page x:Class="FothelCards.MVVM.View.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="DashboardPage">

    <Grid Background="#ECEFF4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#3B4252">
            <TextBlock Text="MENÚ ADMIN" Foreground="White" FontSize="20" FontWeight="Bold" Margin="20"/>
            <Separator Margin="10,0,10,20"/>

            <Button Content="Gestión de Stock" Click="BtnStock_Click" Margin="10,5" Padding="10" Background="#4C566A" Foreground="White"/>
            <Button Content="Altas/Bajas Usuarios" Click="BtnUsuarios_Click" Margin="10,5" Padding="10" Background="#4C566A" Foreground="White"/>

            <Button Content="Cerrar Sesión" Click="BtnSalir_Click" Margin="10,50,10,10" Padding="10" Background="#BF616A" Foreground="White"/>
        </StackPanel>

        <Frame x:Name="ContenidoFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Margin="10"/>
    </Grid>
</Page>