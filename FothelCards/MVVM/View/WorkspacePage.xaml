<Page x:Class="FothelCards.MVVM.View.WorkspacePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:FothelCards.MVVM.ViewModel"
      Title="WorkspacePage">

    <Page.DataContext>
        <vm:WorkspaceViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <Style x:Key="PanelContainer" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Color="#E0E0E0" Opacity="0.3" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10,0,0,10"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
    </Page.Resources>

    <Grid Background="#F4F7F6" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Inventario de Tienda" Style="{StaticResource TitleText}" Grid.Row="0"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,0,0,10">
                <TextBlock Text="Filas:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Text="{Binding Filas}" Width="40" Margin="0,0,15,0" TextAlignment="Center"/>
                <TextBlock Text="Columnas:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Text="{Binding Columnas}" Width="40" Margin="0,0,15,0" TextAlignment="Center"/>
                <Button Content="Actualizar Estanterías" Command="{Binding GenerarCommand}" Padding="5,2" Background="#D6EAF8" Foreground="#21618C"/>
            </StackPanel>

            <Border Style="{StaticResource PanelContainer}" Grid.Row="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ListaProductos}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="{Binding Filas}" Columns="{Binding Columnas}"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Margin="5" Command="{Binding DataContext.SeleccionarCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" Background="Transparent" BorderThickness="0">
                                    <Border Background="#EAF2F8" CornerRadius="8" Padding="10">
                                        <StackPanel>
                                            <Image Source="{Binding RutaPortada}" Height="100" Margin="0,0,0,5" />
                                            <TextBlock Text="{Binding Nombre}" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding Estado}" TextAlignment="Center" Foreground="#555" FontSize="11" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Style="{StaticResource PanelContainer}" Grid.Row="0">
                <StackPanel>
                    <TextBlock Text="Detalle Seleccionado" Style="{StaticResource TitleText}" FontSize="18"/>
                    <Image Source="{Binding ProductoSeleccionado.RutaPortada}" Height="150" Margin="0,10"/>
                    <TextBlock Text="{Binding ProductoSeleccionado.Nombre}" FontWeight="Bold" FontSize="18" TextAlignment="Center"/>
                    <TextBlock Text="{Binding ProductoSeleccionado.Tipo}" Foreground="#555" TextAlignment="Center"/>
                    <Button Content="{Binding ProductoSeleccionado.Estado}" 
                            Command="{Binding CambiarEstadoCommand}" CommandParameter="{Binding ProductoSeleccionado}"
                            Margin="20,10" Padding="10" Background="Gold"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource PanelContainer}" Grid.Row="1" AllowDrop="True" Drop="Grid_Drop" Background="#FDFEFE">
                <StackPanel>
                    <TextBlock Text="Agregar Nuevo" Style="{StaticResource TitleText}" FontSize="18"/>

                    <TextBox Text="{Binding NuevoNombre}" Margin="0,5" Padding="5" ToolTip="Nombre del producto..."/>

                    <ComboBox SelectedValue="{Binding NuevoTipo}" Margin="0,5" Padding="5" SelectedValuePath="Content">
                        <ComboBoxItem Content="Comic/Manga"/>
                        <ComboBoxItem Content="Carta Coleccionable"/>
                        <ComboBoxItem Content="Figura"/>
                    </ComboBox>

                    <Button Content="Buscar Portada (o Arrastrar)" Click="BtnBuscarImagen_Click" Margin="0,5" Padding="5"/>
                    <Image Source="{Binding NuevaRutaPortada}" Height="80" Margin="0,5"/>

                    <Button Content="Guardar Coleccionable" Command="{Binding AgregarProductoCommand}" Background="#A3BE8C" Foreground="White" Padding="10" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>